
<div class = "container-fluid">
<div class = "row">
<div class="col-md-6 col-md-offset-1 panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
        <div class="panel-body" style= "background: url('/assets/board.jpg');">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
        </div>
</div>

</div>
</div>


<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">内容:</label>
    <div class="col-md-4">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-4 col-md-offset-2">
      <%= f.submit class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  </div>
  

